<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <fragment
        android:id="@+id/map2"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        tools:context=".MapsActivity2" />

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="284dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/bottom_swipe_up_bg_new"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <ImageView
        android:id="@+id/yuzde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/icon_yuzde"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintStart_toStartOf="parent"></ImageView>

    <ImageView
        android:id="@+id/puan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/icon_rating"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintStart_toEndOf="@+id/yuzde"></ImageView>

    <TextView
        android:id="@+id/txt_puan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        map:layout_constraintTop_toBottomOf="@+id/puan"
        map:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="275dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:text="4.8"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        map:layout_constraintTop_toBottomOf="@+id/txt_puan"
        map:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="270dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/Gray"
        android:text="Puan"
        ></TextView>

    <TextView
        android:id="@+id/txt_yuzde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        map:layout_constraintTop_toBottomOf="@+id/yuzde"
        map:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="121dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:text="%95"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        map:layout_constraintTop_toBottomOf="@+id/txt_yuzde"
        map:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="98dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/Gray"
        android:text="Sürüş Oranı"
        ></TextView>

    <ImageView
        android:id="@+id/foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:background="@drawable/taksici_foto"
        android:layout_marginEnd="220dp"
        map:layout_constraintEnd_toStartOf="@+id/call_user_btn"
        map:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/puan_yildizi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rating_star"
        map:layout_constraintStart_toEndOf="@+id/foto"
        map:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="15dp"
        ></ImageView>

    <TextView
        android:id="@+id/puanlama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        map:layout_constraintStart_toEndOf="@+id/puan_yildizi"
        map:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="83dp"
        android:layout_marginStart="6dp"
        android:textColor="@color/GreenGo"
        android:fontFamily="@font/poppins_light"
        android:text="4.8"
        ></TextView>

    <TextView
        android:id="@+id/isim_soyisim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="105dp"
        android:layout_marginStart="15dp"
        map:layout_constraintStart_toEndOf="@+id/foto"
        map:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:text="Ahmet Duran"
        ></TextView>

    <Button
        android:id="@+id/call_user_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_ara"
        android:textColor="@android:color/white"
        android:text="ARA"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/durum_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20dp"
        android:textColor="@color/RedAlert"
        android:text="Çevrim Dışısınız"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
